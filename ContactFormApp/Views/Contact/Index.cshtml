@model ContactFormApp.Models.Contact
@{
    ViewData["Title"] = "İletişim Formu";
}
<div class="row justify-content-center fade-in">
    <div class="col-md-6">
        <h2 class="text-center mb-4">Bize Ulaşın</h2>
        <form asp-action="Index" method="post" class="needs-validation" novalidate>
            <div class="mb-3 slide-in-left">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 slide-in-right">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="mb-3 slide-in-left">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" required type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3 slide-in-right">
                <label asp-for="Department" class="form-label"></label>
                <select asp-for="Department" class="form-select" required>
                    <option value="">Seçiniz</option>
                    <option value="Muhasebe">Muhasebe</option>
                    <option value="Teknik Destek">Teknik Destek</option>
                    <option value="İnsan Kaynakları">İnsan Kaynakları</option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="mb-3 slide-in-left">
                <label asp-for="Message" class="form-label"></label>
                <textarea asp-for="Message" class="form-control" required rows="4"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="mb-3 text-center">
                <input type="submit" value="Gönder" class="btn btn-primary animate-pulse" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
}
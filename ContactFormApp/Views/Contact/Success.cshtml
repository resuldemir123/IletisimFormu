@{
    ViewData["Title"] = "Mesaj Gönderildi";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 fade-in">
                <div class="card-body text-center py-5 px-4">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill" style="font-size: 72px; color: #28a745;"></i>
                    </div>
                    <h2 class="text-success mb-3">Mesajınız Başarıyla Gönderildi!</h2>
                    <p class="lead">Bizimle iletişime geçtiğiniz için teşekkür ederiz.</p>
                    <p class="text-muted">En kısa sürede size geri dönüş sağlayacağız.</p>

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-outline-primary btn-lg px-4">
                            Yeni Mesaj Gönder
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
